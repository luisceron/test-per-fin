<div class="wrapper border-bottom bg-white">
  <h3><%= link_to Transaction.model_name.human(count: 2), user_transactions_path(@user) %></h3>
</div>

<div class="row">
  <div class="pack form-panel">
    <div class="pack-caption">
      <strong><%= link_to @transaction, transaction_path(@transaction) %></strong>
    </div>
    <div class="pack-inside">
      <dl class="dl-horizontal">
        <%= show_for @transaction, :account %>
        <%= show_for @transaction, :category %>

        <div class="form-group">
          <label><%= Transaction.human_attribute_name(:transaction_type) %></label> <br>
          <div class="form-control">
            <%= enum_translation Transaction, :transaction_types, @transaction.transaction_type %>
          </div>
        </div>

        <%= show_for @transaction, :date, { text: date_for(@transaction.date) } %>
        <%= show_for @transaction, :amount, { text: number_to_currency(@transaction.amount) } %>
        <%= show_for @transaction, :description %>
      </dl>

      <div class="text-center">
        <%= link_with_icon_to_back user_transactions_path(@user) %>
        <%= link_with_icon_to_edit edit_transaction_path(@transaction) %>
      </div>
    </div>
  </div>
</div>
