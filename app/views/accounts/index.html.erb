<div class="wrapper border-bottom bg-white">
  <h3><%= Account.model_name.human(count: 2) %></h3>
</div>

<div class="row">
  <div class="pack form-panel">
    <div class="pack-caption"><strong><%= action_index Account %></strong></div>
    <div class="pack-inside">
      <div class="table-responsive">
        <table class="table table-hover table-striped table-condensed">
          <thead>
            <tr>
              <th><%= Account.human_attribute_name(:name) %></th>
              <th><%= Account.human_attribute_name(:balance) %></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @accounts.each do |account| %>
              <tr data-href="<%= account_path(account) %>">
                <td><%= account.name %> <%= badge_for_account_type account.account_type %></td>
                <td><%= account.balance %></td>
                <td>
                  <div class="pull-right">
                    <%= link_only_icon_to_edit edit_account_path(account) %>
                    <%= link_only_icon_to_destroy account %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="row">
        <div class="pull-right">
          <%= link_with_icon_to_new_fem new_user_account_path(@user), Account %>
        </div>
      </div>

      <%= index_footer @accounts %>
    </div>
  </div>
</div>
