<div class="wrapper border-bottom bg-white">
  <h3><%= Account.model_name.human.pluralize %></h3>
</div>

<div class="row">
  <div class="pack form-panel">
    <div class="pack-caption"><strong><%= action_index Account %></strong></div>
    <div class="pack-inside">
      <div class="row">
        <div class="col-md-12">
          <%= search_form_for(@query) do |f|  %>
            <div class="input-group btn-group" role="group">
              <%= f.text_field :name_cont, class: "input-sm form-control" %>
              <span class="input-group-btn">
                <%= button_tag(type: 'submit', class: "btn btn-sm btn-primary", id: "search_button") do %>
                  <i class="fa fa-search"></i>
                <% end %>
              </span>
            </div>
          <% end %>
        </div>
      </div><br>

      <div class="table-responsive">
        <table class="table table-hover table-striped table-condensed">
          <thead>
            <tr>
              <th><%= Account.human_attribute_name(:name) %></th>
              <th><%= Account.human_attribute_name(:type) %></th>
              <th><%= Account.human_attribute_name(:balance) %></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @accounts.each do |account| %>
              <tr data-href="<%= account_path(account) %>">
                <td><%= account.name %></td>
                <td><%= account.type %></td>
                <td><%= account.balance %></td>
                <td>
                  <div class="pull-right">
                    <%= link_only_icon_to_edit edit_account_path(account) %>
                    <%= link_only_icon_to_destroy account %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="row">
        <div class="pull-right">
          <%= link_with_icon_to_new new_account_path %>
        </div>
      </div>

      <%= index_footer @accounts %>
    </div>
  </div>
</div>
