<div class="wrapper border-bottom bg-white">
  <h3><%= Account.model_name.human.pluralize %></h3>
</div>

<div class="row">
  <div class="pack form-panel">
    <div class="pack-caption">
      <strong><%= @account.name %></strong>
    </div>
    <div class="pack-inside">
      <dl class="dl-horizontal">
        <%= show_for @account, :type %>
        <%= show_for @account, :name %>
        <%= show_for @account, :balance %>
        <%= show_for @account, :description %>
      </dl>

      <div class="text-center">
        <%= link_with_icon_to_back accounts_path %>
        <%= link_with_icon_to_edit edit_account_path(@account) %>
      </div>
    </div>
  </div>
</div>
