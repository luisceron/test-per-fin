<div class="wrapper border-bottom bg-white">
  <h3><%= User.model_name.human.pluralize %></h3>
</div>

<div class="row">
  <div class="pack form-panel">
    <div class="pack-caption"><strong><%= action_index User %></strong></div>
    <div class="pack-inside">

      <table class="table table-hover table-bordered table-striped table-condensed">
        <thead>
          <tr>
            <th><%= User.human_attribute_name(:name) %></th>
            <th><%= User.human_attribute_name(:email) %></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr data-href="<%= user_path(user) %>">
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td>
                <%= link_to 'Show', user, class: "btn btn-xs btn-primary" %>
                <%= link_to 'Edit', edit_user_path(user), class: "btn btn-xs btn-primary" %>
                <%= link_to 'Excluir', user, class: "btn btn-xs btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="pull-right">
        <%= link_to 'Novo UsuÃ¡rio', new_user_path, class: "btn btn-sm btn-primary" %>
      </div><br>
    </div>
  </div>
</div>
