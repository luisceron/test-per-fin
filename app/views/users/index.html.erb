<div class="wrapper border-bottom bg-white">
  <h3><%= User.model_name.human.pluralize %></h3>
</div>

<div class="row">
  <div class="pack form-panel">
    <div class="pack-caption"><strong><%= action_index User %></strong></div>
    <div class="pack-inside">
      <div class="table-responsive">
        <table class="table table-hover table-striped table-condensed">
          <thead>
            <tr>
              <th><%= User.human_attribute_name(:email) %></th>
              <th><%= User.human_attribute_name(:name) %></th>
              <th class="text-center"><%= User.human_attribute_name(:admin) %></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @users.order(email: :asc).each do |user| %>
              <tr data-href="<%= user_path(user) %>">
                <td><%= user.email %></td>
                <td><%= user.name %></td>
                <td class="text-center"><%= icon_for_boolean user.admin %></td>
                <td>
                  <div class="pull-right">
                    <%= link_icon_to_edit edit_user_path(user) %>
                    <%= link_icon_to_destroy user %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="pull-right">
        <%= link_to new_user_path, class: "btn btn-primary" do %>
          <i class="fa fa-user-plus"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
