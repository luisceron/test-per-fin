<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-login"}) do |f| %>
   <h2 class="form-login-heading"><%= t('.sign_up', :default => "Sign up") %></h2>
   <div class="login-wrap">
    <%= f.input :email, autofocus: true, class:"form-control", placeholder:"Email" %>
    <%= f.input :password, autocomplete: "off", class:"form-control", placeholder: "Password" %>
    <%= f.input :password_confirmation, autocomplete: "off", class:"form-control", placeholder: "Password" %>
    <br>
    <%= button_tag(type: "submit", class: "btn btn-theme btn-block") do %>
      <i class="fa fa-lock"></i> <%= t('.sign_up', :default => "Sign up") %>
    <% end %>
    <hr>

    <div class="registration">
      Don't have an account yet?<br/>
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
