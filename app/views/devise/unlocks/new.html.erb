<%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: {method: :post, class: "form-login"}) do |f| %>
  <h2 class="form-login-heading"><%= t('.resend_unlock_instructions') %></h2>
  <div class="login-wrap">
    <%= f.input :email, label: false, autofocus: true, placeholder: User.human_attribute_name(:email) %>

    <%= button_tag(type: "submit", class: "btn btn-theme btn-block") do %>
      <i class="fa fa-sign-in"></i> <%= t('.resend_unlock_instructions') %>
    <% end %>

    <hr>

    <div class="registration">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
