<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: "form-login"}) do |f| %>
  <h2 class="form-login-heading"><%= t('.forgot_your_password') %></h2>
  <div class="login-wrap">
    <%= f.input :email, label: false, autofocus: true, placeholder: User.human_attribute_name(:email) %>

    <%= button_tag(type: "submit", class: "btn btn-theme btn-block") do %>
      <i class="fa fa-sign-in"></i> <%= t('.send_me_reset_password_instructions') %>
    <% end %>

    <hr>

    <div class="registration">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
